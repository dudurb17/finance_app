<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/widget_background"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:contentDescription="@null" />
    <TextView
        android:id="@+id/widget_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_balance_label"
        android:textSize="13sp"
        android:letterSpacing="0.02"
        android:textColor="@color/widget_label"
        android:textAllCaps="true"
        android:layout_marginTop="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/widget_balance_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="26sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            android:textColor="@color/widget_balance_text"
            android:text="R$ 0,00"
            android:maxLines="1"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/widget_refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/widget_button_background"
            android:text="@string/widget_refresh"
            android:textColor="@color/widget_button_text"
            android:textSize="13sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>
